{% extends 'base.html.twig' %}

{% block body %}
    {{form_start(formArticle)}}
        {{form_row(formArticle.title,{'attr':{'placeholder':'Titre de l\'article'}})}}
        {{form_row(formArticle.category)}}
        {{form_row(formArticle.content,{'attr':{'placeholder':'Le contenue de l\'article'}})}}
        {{form_row(formArticle.image,{'attr':{'placeholder':'L\'image de l\'article'}})}}
        <button class="btn btn-success" type="submit">
            {% if editMode %} 
                Enregister les modification!
            {% else %}
                Envoyer!
            {% endif %}
        </button>
    {{form_end(formArticle)}}
{% endblock %}